{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true
    },
    "exclude": [
        ".git",
        "dist",
        "doc",
        "examples",
        "node_modules",
        "tools",
        "ydoc"
    ],
    "filesGlob": [
        "bench/**/*.ts",
        "node/**/*.ts",
        "ts/**/*.ts",
        "test/**/*.ts"
    ]
}
