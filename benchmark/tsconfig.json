{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "rootDir": ".",
        "sourceMap": true
    },
    "exclude": [
        "doc",
        "node_modules"
    ],
    "include": [
        "index.ts",
        "src/**/*.ts",
        "node_modules/@ktn/"
    ],
    "typedocOptions": {
        "out": "doc",
        "mode": "file",
        "includeDeclarations": true,
        "hideGenerator": false
    }
}
