{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "allowJs": false,
        "noImplicitAny": false,
        "pretty": true,
        "removeComments": false,
        "stripInternal": true,
        "rootDir": ".",
        "listFiles": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        ".git",
        "node",
        "**/node_modules"
    ],
    "typedocOptions": {
        "out": "doc",
        "mode": "file",
        "includeDeclarations": true,
        "hideGenerator": false
    }
}
