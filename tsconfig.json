{
    "compilerOptions": {
        "outDir": "@ktn",
        "target": "es6",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "allowJs": false,
        "noImplicitAny": false,
        "pretty": true,
        "removeComments": false,
        "stripInternal": true,
        "rootDir": ".",
        "listFiles": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        ".git",
        "@ktn",
        "doc",
        "examples",
        "node",
        ".template",
        "**/spec",
        "node_modules",
        "**/node_modules",
        "tools"
    ],
    "typedocOptions": {
        "out": "doc",
        "mode": "file",
        "includeDeclarations": true,
        "hideGenerator": false
    }
}
