{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "allowJs": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "pretty": true,
        "removeComments": false,
        "strictNullChecks": false,
        "stripInternal": true,
        "rootDir": ".",
        "listFiles": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        "doc",
        "coverage",
        "node_modules"
    ],
    "include": [
        "index.ts",
        "spec/**/*.ts",
        "src/**/*.ts"
    ],
    "typedocOptions": {
        "out": "doc",
        "mode": "file",
        "includeDeclarations": true,
        "hideGenerator": false
    }
}
